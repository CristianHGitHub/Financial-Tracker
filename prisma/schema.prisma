generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createUserId String @unique
  email String @unique
  name String?
  imageUrl String?
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Records Record[]
  budget Budget?
}

model Record {
  id String @id @default(uuid())
  text String
  amount Float
  category String @default("Other")
  date DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model Budget {
  id String @id @default(uuid())
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  monthlyIncome Float @default(0)
  housing Float @default(0)
  savings Float @default(0)
  retirement Float @default(0)
  food Float @default(0)
  transportation Float @default(0)
  utilities Float @default(0)
  insurance Float @default(0)
  personalEntertainment Float @default(0)
  debt Float @default(0)
  householdItems Float @default(0)
  giving Float @default(0)
  other Float @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}